RETURN;

'#endif';


"---------------------------------------------------------------------------";
" SetByteWrite                                                              ";
"                                                                           ";
" Entree:                                                                   ";
"	AY: Nombre d'octets a écrire (.A = LSB, .Y = MSB)                   ";
"                                                                           ";
" Sortie:                                                                   ";
"	ACC: 0                                                              ";
"       X,Y: Modifies                                                       ";
"---------------------------------------------------------------------------";
'#iflused SetByteWrite';

SetByteWrite:
	STACK .A;
	CH376_COMMAND = $3C;
	UNSTACK .A;
	CH376_DATA = .A;
	CH376_DATA = .Y;
	CH376_DATA = 0;
	CH376_DATA = 0;
