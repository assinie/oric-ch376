" FileErase                                                                 ";
"                                                                           ";
" Entree:                                                                   ";
"                                                                           ";
" Sortie:                                                                   ";
"	ACC : -> INT_SUCCESS ($14)                                          ";
"	Z  : 1 -> OK, 0 -> NOK                                              ";
