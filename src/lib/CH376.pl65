'#endif';


"---------------------------------------------------------------------------";
" ByteWrGo                                                                  ";
"	Ok -> INT_DISK_READ ($1d)                                           ";
"	Plus de données -> INT_SUCCESS ($14)                                ";
"       X,Y: Modifies                                                       ";
"---------------------------------------------------------------------------";
'#iflused ByteWrGo';

ByteWrGo:
	CH376_COMMAND = $3D;
