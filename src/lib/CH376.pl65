RETURN;

'#endif';


"---------------------------------------------------------------------------";
" WaitResponse:                                                             ";
"	A voir si il faut préserver X et Y                                  ";
"                                                                           ";
" Entree:                                                                   ";
"	                                                                    ";
" Sortie:                                                                   ";
"	Z: 0 -> ACC: Status du CH376                                        ";
"	Z: 1 -> Timeout                                                     ";
"       X,Y: Modifies                                                       ";
"---------------------------------------------------------------------------";
'#iflused WaitResponse';

WaitResponse:
	.Y = $FF;
	REPEAT;
		DO;
			.X=$FF;
			REPEAT;
				DO;
					.A = CH376_COMMAND;
					IF + THEN
					BEGIN;
						CH376_COMMAND = $22;
						.A = CH376_DATA;
						RETURN;
					END;
					DEC .X;
				END;
			UNTIL .Z;
			DEC .Y;
		END;
	UNTIL .Z;
RETURN;

'#endif';

"---------------------------------------------------------------------------";
"                           Fin du Module                                   ";
"---------------------------------------------------------------------------";

EXIT;

